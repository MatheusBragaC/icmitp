{
  "name": "screenshot-whatsapp-app",
  "version": "1.0.0",
  "description": "Aplicativo desktop para capturar screenshots e enviar para WhatsApp via WPPConnect",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"npm run start\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "typescript",
    "screenshot",
    "whatsapp",
    "wppconnect"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/screenshot-desktop": "1.12.3",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "screenshot-desktop": "^1.12.1"
  },
  "build": {
    "appId": "com.screenshot.whatsapp",
    "productName": "Screenshot WhatsApp App",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 